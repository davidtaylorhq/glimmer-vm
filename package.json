{
  "name": "glimmer-engine",
  "version": "0.84.3",
  "private": true,
  "description": "Glimmer compiles Handlebars templates into document fragments rather than string buffers",
  "repository": {
    "type": "git",
    "url": "https://github.com/glimmerjs/glimmer-vm.git"
  },
  "license": "MIT",
  "author": "Tilde, Inc.",
  "scripts": {
    "benchmark:start": "pnpm -r --filter @glimmer-workspace/krausest run start",
    "benchmark:build": "node benchmark/bin/build.js",
    "build": "dotenv -c development -- turbo build",
    "build:production": "dotenv -c production -- turbo build",
    "build:control": "rollup -c rollup.config.mjs",
    "lint": "npm-run-all lint:*",
    "lint:files": "dotenv -- turbo lint",
    "force:lint:files": "eslint .",
    "lint:types": "tsc -b",
    "test": "node bin/run-tests.mjs",
    "test:node": "node bin/run-node-tests.mjs",
    "test:babel-plugins": "yarn workspace @glimmer/vm-babel-plugins test",
    "test:types": "node bin/run-types-tests.mjs",
    "test:typecheck": "tsc -b"
  },
  "pnpm": {
    "overrides": {
      "typescript": "$typescript",
      "@rollup/pluginutils": "^5.0.2",
      "@types/node": "$@types/node"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "typescript": "5",
        "@rollup/pluginutils": "5",
        "rollup": "3"
      }
    }
  },
  "devDependencies": {
    "@glimmer-workspace/eslint-plugin": "workspace:^",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.21.5",
    "@babel/plugin-transform-runtime": "^7.21.4",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-typescript": "^7.21.5",
    "@babel/runtime": "^7.21.5",
    "@babel/traverse": "^7.21.5",
    "@babel/types": "^7.21.5",
    "@glimmer-workspace/build-support": "workspace:^",
    "@glimmer-workspace/integration-tests": "workspace:^",
    "@glimmer/env": "0.1.7",
    "@rollup/plugin-terser": "^0.4.1",
    "@types/babel-plugin-macros": "^3.1.0",
    "@types/babel__core": "^7.20.0",
    "@types/babel__traverse": "^7.18.5",
    "@types/eslint": "^8.37.0",
    "@types/node": "^18.16.6",
    "@types/preval.macro": "^3.0.0",
    "@types/qunit": "workspace:^",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "amd-name-resolver": "^1.3.1",
    "auto-dist-tag": "^2.1.1",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-strip-glimmer-utils": "^0.1.1",
    "chalk": "^5.2.0",
    "dag-map": "^2.0.2",
    "dotenv-cli": "^7.2.1",
    "ensure-posix-path": "^1.1.1",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-qunit": "^7.3.4",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "execa": "^7.1.1",
    "fast-glob": "^3.2.12",
    "glob": "^10.2.3",
    "js-yaml": "^4.1.0",
    "loader.js": "^4.7.0",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "preval.macro": "^5.0.0",
    "puppeteer": "^20.1.2",
    "puppeteer-chromium-resolver": "^20.0.0",
    "qunit": "^2.19.4",
    "rimraf": "^5.0.0",
    "rollup": "^3.21.6",
    "semver": "^7.5.0",
    "testem-failure-only-reporter": "^1.0.0",
    "toml": "^3.0.0",
    "ts-node": "^10.9.1",
    "turbo": "^1.9.3",
    "typescript": "^5.0.4",
    "vite": "^4.3.5",
    "xo": "^0.54.2"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "changelog": {
    "repo": "glimmerjs/glimmer-vm",
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "documentation": ":memo: Documentation",
      "internal": ":house: Internal"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "volta": {
    "node": "20.1.0",
    "pnpm": "8.5.0"
  }
}
