{
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "checkJs": false,
    "target": "ES2019",
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "typeRoots": [],
    "types": [],
    "baseUrl": ".",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "outDir": "ts-dist/build"
  },
  "include": [
    "benchmark/**/*",
    "build/**/*",
    "bin/**/*",
    "lib/**/*",
    "server/**/*",
    "packages/build-utils/@glimmer/**/*",
    "testem.js",
    "testem-browserstack.js",
    "ember-cli-build.js",
    "vite.config.mts"
  ],
  "exclude": ["**/fixtures/**/*", "node_modules/**/*", "**/node_modules/**"]
}
